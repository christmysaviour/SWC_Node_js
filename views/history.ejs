<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        header {
            background-color: #ff5722;
        }
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f7f7;
            color: #333;
        }
        .history-main {
            background-color: #ffffff;
            background-image: url('/waste.png');
            background-size: cover;
            padding: 20px;
            border-radius: 8px;
            max-width: 1200px;
            margin: 40px auto;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        
        .history-main h1 {
            text-align: center;
            background-color: rgba(255, 127, 80, 0.9);
            color: #fff;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        
        .order-session {
            background-color: #fff;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        
        .order-session h2, .order-session h3 {
            margin: 10px 0;
        }
        
        .order-items {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }
        
        .history-item {
            background-color: rgba(153, 205, 50, 0.6);
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        
        .history-item:hover {
            transform: translateY(-5px);
        }
        
        .food-image {
            width: 100%;
            max-width: 200px;
            height: auto;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 10px;
        }
        
        @media (max-width: 768px) {
            .history-item {
                padding: 10px;
            }
        }
        
        @media (max-width: 480px) {
            .history-item {
                padding: 8px;
            }
            
            .history-main h1 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="title">
            <a href="/main"><h1>Traditional American Cuisine</h1></a>
        </div>
        <div class="nav_right">
            <a href="/order-history">Order History</a>
            <a href="/profile">Profile</a>
            <a href="/logout">Sign Out</a>
        </div>
    </header>
    <div class="history-main">
        <h1>Order History</h1>
        <% history.forEach(order => { %>
            <% if (order.items.length > 0) { %> 
                <% let orderTotal = 0; %>
                <div class="order-session">
                    <h2>Order Date: <%= new Date(order.date).toLocaleDateString() %></h2>
                    <div class="order-items">
                        <% order.items.forEach(item => { %>
                            <% let itemTotal = Number(item.quantity) * Number(item.price); %>
                            <% orderTotal += itemTotal; %>
                            <div class="history-item">
                                <img class="food-image" src="<%= item.image %>" alt="<%= item.name %> image"/>
                                <h3>Name: <%= item.name %></h3>
                                <h3>Quantity: <%= item.quantity %></h3>
                                <h3>Price/Item: $<%= item.price %></h3>
                                <h3>Total Price: $<%= itemTotal.toFixed(2) %></h3>
                            </div>
                        <% }) %>
                    </div>
                    <h3>Order Total: $<%= orderTotal.toFixed(2) %></h3>
                </div>
            <% } %>
        <% }) %>
    </div>

    <footer>
        <p>&copy; 2023 Traditional American Cuisine. All rights reserved.</p>
    </footer>
</body>
</html>
